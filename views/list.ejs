<%- include('header'); -%>
    <div id="heading" class="box">
        <h1>It's <%= listTitle %></h1>
    </div>

    <div class="box">
        <% todo.forEach(function(todoItem) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="delete" value="<%= todoItem._id %>" onchange="this.form.submit()">
                    <p><%= todoItem.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <% }); %>

        <form class="item" action="/" method="post">
            <input class="focus" type="text" name="todo" placeholder="Add to do" autocomplete="off" required>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
    
    
<%- include('footer') -%>